  <script>
    // Simple pre-check logic for demo
    const form = document.getElementById('precheck');
    const result = document.getElementById('precheck-result');
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const state = document.getElementById('state').value;
      const focus = document.getElementById('focus').value;
      let msg = "Thanks! We’ll email you your state-specific next steps.";
      if(focus.includes('Record relief')){
        msg = "Record relief options vary by state and offense. We’ll email an eligibility checklist and offer a referral to a licensed attorney in " + state + ".";
      } else if(focus.includes('Eviction')){
        msg = "We’ll send a dispute & court-update plan for " + state + ", plus a landlord application strategy.";
      } else if(focus.includes('Build rental')){
        msg = "We’ll outline rent reporting options available in " + state + " and send your Rental Résumé template.";
      }
      result.textContent = msg;
      result.style.display = 'block';
    });
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>

